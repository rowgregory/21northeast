generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id    String @id @default(cuid())
  email String @unique

  // Generic person info (optional)
  firstName String?
  lastName  String?
  phone     String?

  // Flexible user-specific data
  metadata Json? // ‚Üê Future-proof

  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Log {
  id        String   @id @default(cuid())
  level     String
  message   String
  metadata  Json?
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Page Content
model Page {
  id        String  @id @default(cuid())
  slug      String  @unique
  content   Json
  createdBy String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactSubmission {
  id           String   @id @default(cuid())
  firstName    String
  lastName     String
  email        String
  phoneNumber  String
  propertyType String? // interested property type
  priceRange   String? // budget range
  timeframe    String? // when looking to buy/sell
  subject      String
  message      String
  status       String   @default("new") // new, contacted, closed
  source       String   @default("contact-form") // where submission came from
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
  @@index([status])
  @@index([createdAt])
}
